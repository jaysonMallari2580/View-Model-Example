<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/profile_picture"
            android:layout_height="@dimen/profile_picture"
            android:src="@drawable/leonardo_dicarpio"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/profile_name_margin"
            android:layout_marginLeft="@dimen/mountain_image_margin_left"
            android:text="@string/profile_male"
            android:textColor="@color/black"
            android:textSize="@dimen/profile_textSize"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_image" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/profile_name_margin"
            android:layout_marginLeft="36dp"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/profile_textSize_age"
            app:layout_constraintLeft_toRightOf="@+id/name_tv"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            tools:text="55" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/location_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_location_on_black_24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_tv"
            app:strokeColor="@color/profile_text_color" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/miles_away"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="12 miles away"
            android:textColor="@color/profile_text_color"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@+id/location_icon"
            app:layout_constraintTop_toBottomOf="@+id/name_tv" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="text"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="@+id/location_icon"
            app:layout_constraintTop_toBottomOf="@+id/miles_away" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/school_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="text"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="@+id/location_icon"
            app:layout_constraintTop_toBottomOf="@+id/email_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>